            "modifiers": {
              "mandatory": ["left_control", "right_shift"]
            }
          },
          "to": [
            {"key_code": "japanese_eisuu"}
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": ["right_shift"]
            }
          },
          "to": [
            {"key_code": "japanese_kana"}
          ]
        }
      ]
    }
  ]
}
