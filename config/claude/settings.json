{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "WebSearch",
      "UPDATE",
      "READ(./src/**)",
      "SEARCH(./src/**)",
      "EDIT(./src/**)",
      "EDIT(//temp/**)",
      "Bash(git:*)",
      "Bash(npm:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(grep:*)",
      "Bash(for:*)",
      "Bash(jq:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(xargs:*)",
      "Bash(./gradlew:*)",
      "Bash(npx:*)",
      "Bash(python3:*)",
      "Bash(tee:*)",
      "Bash(pnpm:*)",
      "Bash(make:*)"
    ],
    "deny": [
      "WebFetch",
      "Bash(sudo:*)",
      "Bash(wget:*)",
      "Bash(curl:*)",
      "Bash(rm:*)",
      "Bash(rm -rf:*)",
      "Read(.npmrc)",
      "Read(.env)"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(git commit:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"タスクが完了しました\" with title \"Claude Code\" subtitle \"処理終了\" sound name \"Hero\"'"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"指示待ちです\" with title \"Claude Code\" subtitle \"指示待ち\" sound name \"Hero\"'"
          }
        ]
      }
    ]
  }
}
